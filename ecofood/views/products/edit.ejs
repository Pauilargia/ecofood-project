<form action="/products/<%= product._id %>/edit" method="POST" enctype="multipart/form-data">
<div class="col-md-3 col-md-offset-3">
    <div class="form-group">
        <label for="name">Name</label>
        <input  class="form-control" type="text" id="name" name="name" value="<%= product.name %>">
    </div>

    <div class="form-group">
      <label for="unit">Unit</label>
      <select class="form-control" name="unit" id="unit" value="<%= product.unit %>">
        <option value="kg">Kg</option>
        <option value="litro">L</option>
      </select>
    </div>

    <div class="form-group">
      <label for="unitPrice">UnitPrice</label>
      <input class="form-control" type="Number" name="unitPrice" id="unitPrice" value="<%= product.unitPrice %>">
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      <select class="form-control" name="category" id="category" value="<%= product.category %>">
        <option value="Fruits">Fruits</option>
        <option value="Vegetables">Vegetables</option>
        <option value="Animal Products">Animal Products</option>
      </select>
    </div>
</div>

<div class="col-md-3">
    <div class="form-group">
      <label for="availableQty">AvailableQty</label>
      <input class="form-control" type="Number" name="availableQty" id="availableQty" value="<%= product.availableQty %>">
    </div>

    <div class="form-group">
      <label for="deadline">Deadline</label>
      <input class="form-control" type="Date" name="deadline" id="deadline" value="<%= product.deadline %>">
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input class="form-control" type="String" name="location" id="location" value="<%= product.location %>">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" type="text" name="description" id="description"><%= product.description %></textarea>
    </div>
    <button type="submit" class="btn btn-success">Update Product</button>
</div>

</form>
